<?xml version="1.0" encoding="utf-8"?>
<com.example.homework_2.presentation.view.MessengerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messenger_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chat_background"
    android:layout_gravity="start">

    <androidx.cardview.widget.CardView
        android:id="@+id/avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:id="@+id/avatar_image_companion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/black"
            android:src="@drawable/baseline_account_circle_24"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/companion_message_shape"
        android:orientation="vertical"
        android:gravity="start"
        android:padding="10dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя пользователя"
            android:textColor="@color/turquoise"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/companion_messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текст сообщения"
            android:textColor="@color/digit_color"
            android:textSize="16sp" />
    </LinearLayout>


    <com.example.homework_2.presentation.view.FlexBoxLayout
        android:id="@+id/flex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chat_background"
        android:visibility="gone"
        android:paddingStart="30dp"
        android:paddingEnd="100dp">

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/plus_shape"
            android:src="@drawable/baseline_add_24"
            android:visibility="visible"
            android:layout_marginTop="14dp"
            android:layout_marginStart="9dp"
            android:padding="4dp"/>

    </com.example.homework_2.presentation.view.FlexBoxLayout>
</com.example.homework_2.presentation.view.MessengerLayout>