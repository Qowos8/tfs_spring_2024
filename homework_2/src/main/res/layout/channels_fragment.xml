<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/channels_container"
    style="@style/Base.Theme.channels">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/channels_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:boxStrokeColor="@color/black"
        android:textColorHint="@color/white"
        app:endIconTint="@color/white"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_search_24"
        app:cursorColor="@color/white"
        app:boxBackgroundColor="@color/bottom_background_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/channels_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_hint"
            android:textSize="22sp"
            android:paddingHorizontal="32dp"
            android:singleLine="true"
            android:textColorHint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/channels_text_layout"
        android:background="@color/bottom_background_color"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/white"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/tab_indicator_color"
        android:focusableInTouchMode="true"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/channels_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>