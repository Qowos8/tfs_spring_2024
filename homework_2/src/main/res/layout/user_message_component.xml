<?xml version="1.0" encoding="utf-8"?>
<com.example.homework_2.MessengerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messenger_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chat_background"
    android:layout_marginVertical="10dp"
    app:layout_gravity="end"
    >
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_message_shape"
        android:padding="10dp"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текст сообщения"
            android:textColor="@color/digit_color"
            android:textSize="19sp" />
    </LinearLayout>

    <com.example.homework_2.FlexBoxLayout
        android:id="@+id/flex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chat_background">

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/plus_shape"
            android:src="@drawable/add_emoji"
            android:visibility="gone"
            android:layout_margin="8dp"/>
    </com.example.homework_2.FlexBoxLayout>
</com.example.homework_2.MessengerLayout>
