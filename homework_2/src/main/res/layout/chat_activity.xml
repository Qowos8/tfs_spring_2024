<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.channels"
    tools:context="com.example.homework_2.presentation.chat.ChatActivity">
    <include
        android:id="@+id/toolbar_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/toolbar_fragment"
        />
    <ImageView
        android:id="@+id/topic_block"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:src="@drawable/topic_shape"
        app:layout_constraintTop_toBottomOf="@id/toolbar_chat"
        />
    <TextView
        android:id="@+id/topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic: #testing"
        android:textColor="@color/topic_text_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/topic_block"
        app:layout_constraintTop_toTopOf="@id/topic_block"
        app:layout_constraintBottom_toBottomOf="@id/topic_block"
        app:layout_constraintEnd_toEndOf="@id/topic_block"
        />
    <ImageView
        android:id="@+id/input_block"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:src="@drawable/block_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/digit_color"
        android:background="@drawable/text_input_shape"
        android:hint="@string/text_input_hint"
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:inputType="textCapSentences"
        android:layout_marginEnd="65dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_block"/>

    <ImageView
        android:id="@+id/message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/send_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_block"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintStart_toEndOf="@id/message_input"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/resource_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_resource"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_block"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintStart_toEndOf="@id/message_input"
        android:visibility="visible"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/input_block"
        app:layout_constraintTop_toBottomOf="@id/topic_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginHorizontal="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>