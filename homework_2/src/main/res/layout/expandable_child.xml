<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expandable_child"
>
<TextView
    android:id="@+id/name_topic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Testing"
    android:textColor="@color/white"
    android:textSize="18sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    />

    <TextView
        android:id="@+id/message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1240"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/name_topic"
        app:layout_constraintBottom_toBottomOf="@id/name_topic"
        app:layout_constraintStart_toEndOf="@id/name_topic"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mes"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/name_topic"
        app:layout_constraintBottom_toBottomOf="@id/name_topic"
        app:layout_constraintStart_toEndOf="@id/message_count"
        android:layout_marginStart="4dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:layout_marginTop="12dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>